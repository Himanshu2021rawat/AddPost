<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full h-[145vh] bg-black text-white p-4">
      <h1
        class="text-4xl tracking-tight leading-none text-center font-semibold"
      >
        <a
          class="text-2xl text-blue-500 hover:cursor-pointer hover:underline"
          href="/"
          >Home</a
        >
      </h1>

      <div class="cards w-full p-4 flex gap-5 flex-wrap justify-evenly">
        <% if(users.length > 0){ %> <% users.forEach((user,i)=>{ %>

        <div
          class="card w-[15vw] h-[55vh] shadow-lg shadow-blue-500 rounded-lg p-4 flex flex-col items-center"
        >
          <div class="img w-full h-[40vh] p-3 overflow-hidden">
            <img
              class="w-full h-full object-cover object-top"
              src="<%=user.img%>"
              alt=""
            />
          </div>
          <h3 class="text-xl text-sky-200"><%= user.name %></h3>
          <h3 class="text-md text-sky-200"><%= user.email%></h3>
          <div class="controls flex items-center gap-5 p-3">
            <a class="text-green-400" href="/edit/<%=user._id%>">Edit</a>
            <a class="text-red-400" href="/delete/<%=user._id%>">Delete</a>
          </div>
        </div>

        <%}) %> <% } else {%>

        <h1 class="text-4xl tracking-tight leading-none">No User</h1>

        <%}%>
      </div>
    </div>
    <script src="/javascripts/script.js"></script>
  </body>
</html>
